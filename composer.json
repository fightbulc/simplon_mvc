{
  "name": "simplon/mvc",
  "description": "Strongly opinionated MVC framework for rapid development",
  "homepage": "https://github.com/fightbulc/simplon_mvc",
  "type": "library",
  "keywords": [
    "mvc",
    "model",
    "view",
    "controller",
    "templates",
    "router",
    "mustache",
    "locales",
    "i18n",
    "fast",
    "lightweight",
    "form",
    "doi"
  ],
  "license": "MIT",
  "authors": [
