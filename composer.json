      "name": "Tino Ehrich",
      "email": "tino@bigpun.me",
      "role": "developer"
    }
  ],
  "require": {
    "php": ">=5.6",
    "simplon/request": "1.1.*",
    "simplon/mysql": "1.3.*",
    "simplon/locale": "0.2.*",
    "simplon/template": "0.6.*",
    "simplon/error": "0.3.*",
    "simplon/form": "1.0.*",
    "simplon/doi": "0.3.*",
    "robmorgan/phinx": "0.4.*",
    "simplon/component_mvc": "0.0.*"
